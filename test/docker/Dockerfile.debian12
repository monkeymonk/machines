FROM debian:12
ENV DEBIAN_FRONTEND=noninteractive
RUN apt-get update && apt-get install -y systemd systemd-sysv sudo curl git wget ca-certificates && apt-get clean && rm -rf /var/lib/apt/lists/*
RUN useradd -m -s /bin/bash testuser && echo "testuser ALL=(ALL:ALL) NOPASSWD:ALL" >> /etc/sudoers
WORKDIR /machines
